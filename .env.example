# Deribit Webhook Python - Environment Configuration
# Copy this file to .env and configure your settings

# Server Configuration
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=INFO

# Environment Settings
NODE_ENV=development
USE_MOCK_MODE=true
USE_TEST_ENVIRONMENT=true
AUTO_START_POLLING=true

# API Configuration
API_KEY_FILE=./config/apikeys.yml

# Deribit API URLs (usually don't need to change these)
DERIBIT_API_URL=https://www.deribit.com/api/v2
DERIBIT_TEST_API_URL=https://test.deribit.com/api/v2
DERIBIT_WS_URL=wss://www.deribit.com/ws/api/v2
DERIBIT_TEST_WS_URL=wss://test.deribit.com/ws/api/v2

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/delta_records.db

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production

# Polling Configuration
ENABLE_POSITION_POLLING=true
POLLING_INTERVAL_SECONDS=30
# Position polling interval in minutes (used for position monitoring and adjustment)
POSITION_POLLING_INTERVAL_MINUTES=15
# Order polling interval in minutes (used for pending order processing)
ORDER_POLLING_INTERVAL_MINUTES=5
MAX_POLLING_ERRORS=5

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=./logs/combined.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Trading Configuration
SPREAD_RATIO_THRESHOLD=0.15
# 盘口价差步进倍数阈值：(盘口价差 / 价格最小步进) <= 此倍数时认为价差合理
SPREAD_TICK_MULTIPLE_THRESHOLD=2

# WeChat Bot Configuration (Global defaults - can be overridden per account)
WECHAT_TIMEOUT=10000
WECHAT_RETRY_COUNT=3
WECHAT_RETRY_DELAY=1000
